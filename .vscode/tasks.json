{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build QNX (Debug)",
            "type": "shell",
            "options": {
                "env": {
                    "CXX_FLAGS": "-O0 -fno-omit-frame-pointer -mno-omit-leaf-frame-pointer",
                    "VERBOSE": "1"
                }
            },
            "linux": {
                "options": {
                    "cwd": "${workspaceFolder}/qnx"
                },
                "command": "cmake -E make_directory ${workspaceFolder}/qnx/build/linux-debug && cmake -S ${workspaceFolder}/qnx -B ${workspaceFolder}/qnx/build/linux-debug -DCMAKE_BUILD_TYPE=DEBUG -DENABLE_CLANG_TIDY=on -DSANITIZE_THREAD=Off -DCODE_COVERAGE=off && cmake --build ${workspaceFolder}/qnx/build/linux-debug"
            },
            "problemMatcher": [
                {
                    "owner": "cpp",
                    "fileLocation": ["absolute"],
                    "pattern": {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build QNX (Release)",
            "type": "shell",
            "options": {
                "env": {
                    "CXX_FLAGS": "-O3 -g"
                }
            },
            "linux": {
                "options": {
                    "cwd": "${workspaceFolder}/qnx"
                },
                "command": "cmake -E make_directory ${workspaceFolder}/rcu/build/linux-release && cmake -S ${workspaceFolder}/qnx -B ${workspaceFolder}/qnx/build/linux-release -DCMAKE_BUILD_TYPE=RELEASE && cmake --build ${workspaceFolder}/qnx/build/linux-release"
            },
            "problemMatcher": [
                {
                    "owner": "cpp",
                    "fileLocation": ["absolute"],
                    "pattern": {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
